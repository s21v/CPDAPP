<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="galleryView">
        <attr name="count" format="integer"/>
        <attr name="textSize" format="dimension"/>
        <attr name="barBackground" format="color"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="FontSizeView">
        <attr name="fontSizeNameArray" format="reference"/>
        <attr name="fontSizeValueArray" format="reference"/>
        <attr name="fontTextSize" format="dimension"/>
        <attr name="sliderBackground" format="reference"/>
        <attr name="lineTopSpaceSize" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="BezierView">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="firstWaveLengthRatio" format="float"/>
        <attr name="secondWaveLengthRatio" format="float"/>
        <attr name="firstAnimationDuration" format="integer"/>
        <attr name="secondAnimationDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AutoChangeLineLayout">
        <attr name="ItemLRMargin" format="dimension"/>
        <attr name="LineSpace" format="dimension"/>
    </declare-styleable>
</resources>
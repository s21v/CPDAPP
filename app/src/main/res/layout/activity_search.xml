<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:id="@+id/toolbar"
        app:title="@string/search"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <com.cpd.yuqing.view.AutoChangeLineLayout
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tagLayout"
                android:layout_below="@id/clearTagImageButton"
                android:layout_alignParentLeft="true"
                app:ItemLRMargin="4dp"
                app:LineSpace="4dp"/>
            <ImageButton
                android:id="@+id/clearTagImageButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:drawable/ic_menu_delete"/>
            <TextView
                android:id="@+id/historyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/searchedResult"
                android:layout_alignBottom="@id/clearTagImageButton"
                android:layout_toLeftOf="@id/clearTagImageButton"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/resultListView"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
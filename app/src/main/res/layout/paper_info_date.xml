<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="date"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paper_info_marginLeft"
        android:layout_marginTop="@dimen/paper_info_marginLeft"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot"
            android:layout_width="@dimen/paper_date_dot_size"
            android:layout_height="@dimen/paper_date_dot_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/paper_info_dot" />

        <TextView
            android:id="@+id/paperDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paper_info_marginLeft"
            android:text="@{date}"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/news_title_size"
            android:textStyle="bold" />
    </LinearLayout>
</layout>
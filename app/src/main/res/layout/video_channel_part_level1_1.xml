        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/viewBackground"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

